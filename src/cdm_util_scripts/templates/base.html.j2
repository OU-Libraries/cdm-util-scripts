{%- macro showwhitespace(s) -%}
    {%- for c in s -%}
        {%- if c == "\n" -%}
            <span class="nonprinting">LF</span>
        {%- elif c == "\r" -%}
            <span class="nonprinting">CR</span>
        {%- elif c == "\t" -%}
            <span class="nonprinting">TAB</span>
        {%- else -%}
            {{ c }}
        {%- endif -%}
    {%- endfor -%}
{%- endmacro -%}
{%- macro cdmnickandname(nick) %}<span class="cdm-label">{{ cdm_nick_to_name[nick] }}</span> &lt;<span class="cdm-nick">{{ nick }}</span>&gt;{% endmacro -%}
