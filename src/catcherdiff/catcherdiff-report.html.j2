<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{{ catcher_json_file }} catcherdiff report</title>
        <style type="text/css">
         .container {
             max-width: 1170px;
             margin-right: auto;
             margin-left: auto;
         }
         .value {
             font-family: monospace;
         }
         th, td {
             padding: 0 1em 0 1em;
             text-align: left;
             vertical-align: text-top;
         }
         tr {
             outline: thin solid;
         }
         .equal {
             background-color: #Ee8262;
         }
         .overwrite-blank {
             background-color: #6e8b3d;
         }
         .overwrite {
             background-color: #Ff8c00;
         }
        </style>
    </head>

    <body>
        <div class="container">
            <h1>{{ catcher_json_file }} catcherdiff report</h1>

            <p>
                Report datetime: {{ report_datetime }}<br/>
                CONTENTdm repository: {{ cdm_repo_url }}<br/>
                Collection alias: {{ cdm_collection_alias }}<br/>
                cdm-catcher file name: {{ catcher_json_file }}<br/>
            </p>

            <h2>Changes</h2>

            {% for edit, cdm_info in deltas %}
                <h3><a href="{{ cdm_repo_url }}/digital/collection/{{ cdm_collection_alias }}/id/{{ edit['dmrecord'] }}">{{ edit['dmrecord'] }}</a></h3>
                <table>
                    <thead>
                        <tr>
                            <th>CONTENTdm field nick</th>
                            <th>Current value</th>
                            <th>Action</th>
                            <th>Edit value</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for nick, value in edit.items() %}
                            <tr>
                                <td><pre>{{ nick }}</pre></td>
                                <td><span class="value">{{ cdm_info[nick] }}</span></td>
                                <td>
                                    {%- if cdm_info[nick] == value %}
                                        <span class="equal">=</span>
                                    {%- elif not cdm_info[nick] %}
                                        <span class="overwrite-blank">&lt;</span>
                                    {%- else %}
                                        <span class="overwrite">&lt;&lt;&lt;</span>
                                    {%- endif %}
                                </td>
                                <td><span class="value">{{ value }}</span></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endfor %}
        </div>
    </body>
</html>
